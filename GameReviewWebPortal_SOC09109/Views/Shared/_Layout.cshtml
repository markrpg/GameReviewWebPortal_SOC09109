<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" id="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" id="topButtons">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>++
                </button>
                    <!--Default Button-->
                    @Html.ActionLink("GRN Game Reviews", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <!--Check if user logged in show only Logout button-->
                @if (Request.IsAuthenticated)
                {
                    <!--The Users Email Address-->
                    @Html.ActionLink(@Html.Encode(User.Identity.Name), "Overview", "Accounts", new { email = @Html.Encode(User.Identity.Name) }, new { @class = "navbar-brand" })

                    <!--Logout Button-->
                    @Html.ActionLink("Logout", "Logout", "Accounts", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    <!--Login Button-->
                    @Html.ActionLink("Login", "Login", "Accounts", new { area = "" }, new { @class = "navbar-brand" })
                    <!--Register Button-->
                    @Html.ActionLink("Register Account", "Register", "Accounts", new { area = "" }, new { @class = "navbar-brand" })

                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    
    <div class="container body-content" id="wrapper">
        <div id="contentPane">
            @RenderBody()
            <hr />
        </div>

        <div id="sidebar">
            <!--Diferent types of genres-->
            <h3>Genres</h3>
            <li>
                <a href="">Action</a>
            </li>
            <li>
                <a href="">Adventure</a>
            </li>
            <li>
                <a href="">Fighting</a>
            </li>
            <li>
                <a href="">Racing</a>
            </li>
            <li>
                <a href="">RPG</a>
            </li>
            <li>
                <a href="">Sport</a>
            </li>
            <li>
                <a href="">Strategy</a>
            </li>
            <li>
                <a href="">Shooter</a>
            </li>
            <!--this is the editors choices (our top 10 games)-->
        </div>

        <div id="footer">
            <footer>
                <p>&copy; @DateTime.Now.Year - Copyright GRN Game Reviews</p>
            </footer>
        </div>

    </div>


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>