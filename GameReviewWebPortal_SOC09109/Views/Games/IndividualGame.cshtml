@model GameReviewWebPortal_SOC09109.Models.Game

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Title -   @Html.DisplayFor(model => model.Name)</h2>
<h3>GRN Rating - @Html.DisplayFor(model => model.Rating)/10 <img src="~/Images/star.png" alt="Star photo"/></h3>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            <a>Game Genre: </a>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            <a>Platform: </a>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Platform)
        </dd>

        <dt>
            <a>Release Date: </a>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Initial_Release_Date)
        </dd>

        <dt>
            <a>Publisher: </a>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Publisher)
        </dd>

        <dt>
            <a>Developer: </a>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Developer)
        </dd>

        <dt>
            <a>Description: </a>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Plot)
        </dd>

    </dl>
</div>
